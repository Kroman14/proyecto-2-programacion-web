<!-- Catálogo de autores -->
<div class="container mt-5">
  <!-- Header del catálogo -->
  <div class="row mb-5">
    <div class="col-12 text-center">
      <h1 class="display-4 fw-bold text-primary mb-3">Nuestros Autores</h1>
      <p class="lead text-muted">Conoce a los escritores de nuestra colección</p>
      {{#if pagination.totalItems}}
        <p class="text-secondary">
          Mostrando {{autores.length}} de {{pagination.totalItems}} autores
          {{#if pagination.totalPages}}
            - Página {{pagination.currentPage}} de {{pagination.totalPages}}
          {{/if}}
        </p>
      {{/if}}
    </div>
  </div>

  <!-- Filtros de búsqueda -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-3">
            <i class="fas fa-search me-2"></i>Buscar autor
          </h5>
          <form method="GET" action="/autores">
            <div class="row g-3">
              <!-- Búsqueda por nombre -->
              <div class="col-md-8">
                <label for="search" class="form-label">Nombre del autor</label>
                <input type="text" 
                       class="form-control" 
                       id="search" 
                       name="search" 
                       placeholder="Buscar por nombre..."
                       value="{{currentFilters.search}}">
              </div>
              <!-- Botones -->
              <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">
                  <i class="fas fa-search me-1"></i>Buscar
                </button>
                <a href="/autores" class="btn btn-outline-secondary">
                  <i class="fas fa-times me-1"></i>Limpiar
                </a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  {{#if error}}
    <!-- Mensaje de error -->
    <div class="row">
      <div class="col-12">
        <div class="alert alert-danger text-center" role="alert">
          <h4 class="alert-heading">¡Oops!</h4>
          <p>{{error}}</p>
          <a href="/" class="btn btn-primary">Volver al inicio</a>
        </div>
      </div>
    </div>
  {{else if autores.length}}
    <!-- Grid de autores -->
    <div class="row g-4">
      {{#each autores}}
        <div class="col-md-6 col-lg-4 col-xl-3">
          <a href="/autor/{{this.id}}" class="text-decoration-none">
            <div class="card h-100 shadow-sm author-card">
              <div class="card-body d-flex flex-column">
                <div class="text-center mb-3">
                  {{#if this.foto}}
                  <img src="{{this.foto}}"
                       class="img-fluid rounded author-photo"
                       alt="{{this.nombre}}"
                       loading="lazy"
                       style="max-width: 100%; height: 200px; object-fit: cover;"
                       onerror="this.onerror=null; this.parentElement.innerHTML='<div class=\'bg-light rounded d-flex align-items-center justify-content-center\' style=\'height: 200px\'><div class=\'text-center\'><i class=\'bi bi-person text-muted display-4\'></i><br><small class=\'text-muted\'>Sin imagen</small></div></div>';">
                  {{else}}
                  <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 200px">
                    <div class="text-center">
                      <i class="bi bi-person text-muted display-4"></i>
                      <br><small class="text-muted">Sin imagen</small>
                    </div>
                  </div>
                  {{/if}}
                </div>

                <h5 class="card-title fw-bold text-dark text-center">{{this.nombre}}</h5>

                {{#if this.nacionalidad}}
                <p class="text-muted text-center mb-2">
                  <i class="bi bi-globe"></i> {{this.nacionalidad}}
                </p>
                {{/if}}

                {{#if this.biografia}}
                <p class="card-text text-muted small flex-grow-1">{{truncate this.biografia 100}}</p>
                {{/if}}

                <div class="d-flex justify-content-between align-items-center mt-auto">
                  <span class="badge bg-primary">{{#if this.total_libros}}{{this.total_libros}}{{else}}0{{/if}} libros</span>
                  <span class="text-muted small">Perfil <i class="bi bi-arrow-right"></i></span>
                </div>
              </div>
            </div>
          </a>
        </div>
      {{/each}}
    </div>

    <!-- Paginación -->
    {{#if pagination.totalPages}}
      {{#if (gt pagination.totalPages 1)}}
        <nav aria-label="Paginación de autores" class="mt-5">
          <ul class="pagination justify-content-center">
            {{#if pagination.hasPrev}}
              <li class="page-item">
                <a class="page-link" href="/autores?page={{pagination.prevPage}}{{#if currentFilters.search}}&search={{currentFilters.search}}{{/if}}" aria-label="Anterior">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
            {{else}}
              <li class="page-item disabled">
                <span class="page-link" aria-hidden="true">&laquo;</span>
              </li>
            {{/if}}

            {{#each (range 1 pagination.totalPages)}}
              {{#if (eq this ../pagination.currentPage)}}
                <li class="page-item active">
                  <span class="page-link">{{this}}</span>
                </li>
              {{else}}
                <li class="page-item">
                  <a class="page-link" href="/autores?page={{this}}{{#if ../currentFilters.search}}&search={{../currentFilters.search}}{{/if}}">{{this}}</a>
                </li>
              {{/if}}
            {{/each}}

            {{#if pagination.hasNext}}
              <li class="page-item">
                <a class="page-link" href="/autores?page={{pagination.nextPage}}{{#if currentFilters.search}}&search={{currentFilters.search}}{{/if}}" aria-label="Siguiente">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            {{else}}
              <li class="page-item disabled">
                <span class="page-link" aria-hidden="true">&raquo;</span>
              </li>
            {{/if}}
          </ul>
        </nav>
      {{/if}}
    {{/if}}

  {{else}}
    <!-- No hay autores -->
    <div class="row">
      <div class="col-12">
        <div class="text-center py-5">
          <i class="fas fa-users text-muted" style="font-size: 4rem;"></i>
          <h3 class="text-muted mt-3">No se encontraron autores</h3>
          <p class="text-muted">No hay autores que coincidan con tu búsqueda.</p>
          <a href="/autores" class="btn btn-primary">
            <i class="fas fa-refresh me-2"></i>Ver todos los autores
          </a>
        </div>
      </div>
    </div>
  {{/if}}
</div>

<!-- Estilos adicionales -->
<style>
.author-card {
  transition: all 0.3s ease;
  cursor: pointer;
}

.author-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
}

.author-card:hover .author-photo {
  transform: scale(1.05);
}

.author-photo {
  transition: transform 0.3s ease;
}

@media (max-width: 768px) {
  .author-card {
    margin-bottom: 1rem;
  }
}
</style>
