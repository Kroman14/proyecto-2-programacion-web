<div class="container py-5" style="max-width: 480px;">
  <h1 class="h3 mb-4 text-center">Iniciar sesión</h1>

  <div id="login-alert" class="alert d-none" role="alert"></div>

  <form id="login-form" class="card shadow-sm p-4">
    <div class="mb-3">
      <label class="form-label">Email</label>
      <input type="email" class="form-control" id="email" placeholder="tu@email.com" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Contraseña</label>
      <input type="password" class="form-control" id="password" placeholder="••••••••" required>
    </div>
    <button type="submit" class="btn btn-primary w-100">
      <i class="bi bi-box-arrow-in-right"></i> Entrar
    </button>
  </form>

  <p class="text-muted mt-3">Usuarios de prueba (luego de ejecutar seed):
    <br>admin@ecommerce.com / <code>admin123</code>
    <br>juan@email.com / <code>cliente123</code>
  </p>
</div>

<script>
  const BACKEND_URL = '{{backendUrl}}';

  const form = document.getElementById('login-form');
  const alertBox = document.getElementById('login-alert');

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    alertBox.className = 'alert d-none';

    const email = document.getElementById('email').value.trim();
    const password = document.getElementById('password').value;

    try {
      const resp = await fetch(`${BACKEND_URL}/auth/login`, {
        method: 'POST',
        headers: {'Content-Type':'application/json'},
        body: JSON.stringify({ email, password })
      });

      const data = await resp.json();
      if (!resp.ok) {
        throw new Error(data.error || 'Error al iniciar sesión');
      }

      // Guardar token y usuario en localStorage
      localStorage.setItem('token', data.token);
      localStorage.setItem('usuario', JSON.stringify(data.usuario));

      // Redirigir al home o al carrito si venías de ahí
      const backTo = sessionStorage.getItem('backTo') || '/';
      sessionStorage.removeItem('backTo');
      window.location.href = backTo;
    } catch (err) {
      alertBox.className = 'alert alert-danger';
      alertBox.textContent = err.message;
    }
  });
</script>
